{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "noImplicitAny": true,

    "outDir": "../resources/assets/oc-js/",

    "baseUrl": ".",
    "paths": {
      "*": [
        "bios/*",
        "components/*",
        "os/*",
        "os/usr/lib/*"
      ]
    }
  },
  "exclude": [
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
