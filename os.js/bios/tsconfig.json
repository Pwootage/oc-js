{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "allowJs": true,

    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "preserveConstEnums": true,
    "removeComments": true,
    "strict": true,
    "outDir": "../../src/main/resources/assets/oc-js/bios/",
    "baseUrl": "./",
    "paths": {
      "*": [
        "*",
        "usr/lib/*"
      ]
    },
    "lib": ["es2015"]
  },
  "exclude": [
  ],
  "files": [
    "bios.ts",
    "bootloader.ts",
    "../os/usr/lib/bios.d.ts",
    "../os/usr/lib/externalComponents.d.ts"
  ],
  "compileOnSave": true,
  "atom": {
    "rewriteTsconfig": false
  }
}
